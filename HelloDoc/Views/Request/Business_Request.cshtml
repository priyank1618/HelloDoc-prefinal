@model DAL.ViewModel.Other_Request;
@{
    ViewData["Title"] = "Business_Request";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Business Request</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HelloDoc.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Business_Request.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <!-- ------------------- -->
    <div class="modal " tabindex="-1" id="modal">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="text-center text-white rounded-circle mt-4 mb-4">
                    <svg xmlns="http://www.w3.org/2000/svg" width="60" height="60" fill="currentColor" class="bi bi-exclamation-circle-fill bg-warning rounded-circle " viewBox="0 0 16 16">
                        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16" />
                        <path d="M7.002 11a1 1 0 1 1 2 0 1 1 0 0 1-2 0M7.1 4.995a.905.905 0 1 1 1.8 0l-.35 3.507a.552.552 0 0 1-1.1 0z" />
                    </svg>
                </div>
                <div class="text-center container ">
                    <h4 class="mt-3 mb-3 fw-4"> Information</h4>
                    <span style="font-size: 14px;">
                        When Submitting a request, You must provide the correct contact information for the patient or the responsibly party. Failure to provide the correct email id and phone number will delay the service or be declined.
                    </span>
                </div>
                <div class="text-center p-3 mt-4 ">
                    <button type="button" class="btn btn-secondary bg-info border border-info" data-bs-dismiss="modal">Ok</button>

                </div>
            </div>
        </div>
    </div>
    <!-- ------------------- -->
    <div class="container-fluid">
        <div class="row">
        
            <!-- -----------------back button-------------------------- -->
            <div class="">
                <div class="d-flex justify-content-end back ">
                    <a asp-action="Patient_submit_request" class="btn btn-outline-info text-center p-2 btn-p" asp-controller="Home">
                        <svg xmlns="http://www.w3.org/2000/svg"
                             width="16"
                             height="16"
                             fill="currentColor"
                             class="bi bi-chevron-left"
                             viewBox="0 0 16 16">
                            <path fill-rule="evenodd"
                                  d="M11.354 1.646a.5.5 0 0 1 0 .708L5.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0" />
                        </svg>
                        <span> back</span>
                    </a>
                </div>
                <!-- -----------------back button-------------------------- -->
            </div>

            <!-- -----------------form-------------------------- -->
            <form asp-action="Business_Request" asp-controller="Request" method="post">
            <div class="container-fluid">
                <div class="container  ps-3 shadow-lg">


                    <h4 class="pt-3 mb-4">Business Information</h4>

                    <div class="row">
                        <div class="col col-12 col-sm-6">
                            <div class="form-floating mb-3">
                                <input type="text"
                                          asp-for="FirstNameOther"
                                       class="form-control"
                                       id="floatingInput"
                                       placeholder="name@example.com" />
                                <label for="floatingInput" class="lbl">Your First Name</label>
                            </div>
                        </div>
                        <div class="col col-12 col-sm-6 mb-3">
                            <div class="form-floating">
                                <input type="text"
                                       asp-for="LastNameOther"
                                       class="form-control"
                                       id="floatingPassword"
                                       placeholder="Password" />
                                <label for="floatingPassword">Your Last Name</label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col col-12 col-sm-6">
                            <div class="form-floating mb-3">
                                <input type="text"
                                    asp-for="PhoneNumberother"
                                       class="form-control"
                                       id="floatingInput"
                                       placeholder="name@example.com" />
                                <label for="floatingInput">Mobile No</label>
                            </div>
                        </div>
                        <div class="col col-12 col-sm-6 mb-3">
                            <div class="form-floating">
                                <input type="email"
                                    asp-for="EmailOther"
                                       class="form-control"
                                       id="floatingPassword"
                                       placeholder="Password" />
                                <label for="floatingPassword">Email</label>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col col-sm-6 col-12">
                            <div class="form-floating">
                                <input type="text"
                                       class="form-control"
                                       asp-for="BusinessName"
                                       id="floatingPassword"
                                       placeholder="Password" />
                                <label for="floatingPassword">Business/Property Name</label>
                            </div>
                        </div>
                        <div class="col col-sm-6 col-12">
                            <div class="form-floating">
                                <input type="text"
                                       class="form-control"
                                
                                       id="floatingPassword"
                                       placeholder="Password" />
                                <label for="floatingPassword">Case No(optional)</label>
                            </div>
                        </div>
                    </div>

                    <h4 class="pt-3 mb-4">Patient Information</h4>

                    <div class="row">
                        <div class="col col-12 mb-3">
                            <div class="form-floating">
                                <textarea class="form-control"
                                          placeholder="Leave a comment here"
                                          id="floatingTextarea2"
                                          style="height: 100px"></textarea>
                                <label for="floatingTextarea2">Enter Brief Details Of Symptoms(optional)</label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col col-12 col-sm-6">
                            <div class="form-floating mb-3">
                                <input type="text"
                                       class="form-control"
                                       id="floatingInput"
                                       asp-for="FirstName_P"
                                       placeholder="name@example.com" />
                                <label for="floatingInput">First Name</label>
                                    <span asp-validation-for="FirstName_P" class="text-danger mb-2"></span>
                            </div>
                        </div>
                        <div class="col col-12 col-sm-6 mb-3">
                            <div class="form-floating">
                                <input type="text"
                                       class="form-control"
                                       id="floatingPassword"
                                       asp-for="LastName_P"
                                       placeholder="Password" />
                                <label for="floatingPassword">Last Name</label>
                                    <span asp-validation-for="LastName_P" class="text-danger mb-2"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col col-sm-6 col-12">
                            <div class="form-floating">
                                <input type="date"
                                    asp-for="BirthDate_P"
                                       class="form-control"
                                       id="floatingPassword"
                                           placeholder="Password" max="@DateTime.Now.ToString("yyyy-MM-dd")"
                                           min="@DateTime.Now.AddYears(-100).ToString("yyyy-MM-dd")" />
                                <label for="floatingPassword">Date Of Birth</label>
                            </div>
                        </div>
                    </div>

                    <h4 class="pt-3 mt-4 mb-4">Patient Contact Information</h4>

                    <div class="row">
                        <div class="col col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input type="email"
                                    asp-for="Email_P"
                                       class="form-control"
                                       id="floatingInput"
                                       placeholder="name@example.com" />
                                <label for="floatingInput">Email</label>
                                    <span asp-validation-for="Email_P" class="text-danger mb-2"></span>
                            </div>
                        </div>
                        <div class="col col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input type="tel"
                                       class="form-control"
                                       id="floatingInput"
                                       asp-for="PhoneNumber_P"
                                       placeholder="name@example.com" />
                                <label for="floatingInput">Mobile No</label>
                            </div>
                        </div>
                    </div>

                    <h4 class="pt-3 mt-4 mb-4">Patient Location</h4>

                    <div class="row">
                        <div class="col col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input type="text"
                                    asp-for="Street"
                                       class="form-control"
                                       id="floatingPassword"
                                       placeholder="Password" />
                                <label for="floatingPassword">Street</label>
                            </div>
                        </div>
                        <div class="col col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input type="text"
                                    asp-for="City"
                                       class="form-control"
                                       id="floatingPassword"
                                       placeholder="Password" />
                                <label for="floatingPassword">City</label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                    <select asp-for="State" class="form-select" aria-label="Default select example">
                                        <option selected>Open this select menu</option>
                                        @foreach (var item in Model.regions)
                                        {
                                            <option value="@item.RegionId">@item.Name</option>
                                        }
                                    </select>
                            </div>
                        </div>
                        <div class="col col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input type="text"
                                    asp-for="Zipcode"
                                       class="form-control"
                                       id="floatingPassword"
                                       placeholder="Password" />
                                <label for="floatingPassword">Zip Code</label>
                            </div>
                        </div>
                    </div>
                    <div class="row">

                        <div class="col col-sm-6 col-12">
                            <div class="form-floating">
                                <input type="text"
                                       class="form-control"
                                       id="floatingPassword"
                                       placeholder="Password" />
                                <label for="floatingPassword">Room #/suite(optional)</label>
                            </div>
                        </div>
                    </div>


                    <!-- ------------------------ -->
                    <div class="row mb-5 pb-3">
                        <div class="d-grid gap-2 d-flex justify-content-end mt-4">
                            <button class="btn btn-info me-md-2 text-white" type="submit">Submit</button>
                                <button class="btn btn-outline-info" type="submit">Cancle</button>
                        </div>
                    </div>
                </div>
            </div>

            </form>

            <!-- -----------------form-------------------------- -->
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js" ></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/Business_Request.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

