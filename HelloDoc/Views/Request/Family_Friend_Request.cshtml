@model DAL.ViewModel.Other_Request
@{
    ViewData["Title"] = "Family_Friend_Request";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Family/Friend Request</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HelloDoc.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Family_Friend_Request.css"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container-fluid ">
        <div class="row">
          
            <!-- -----------------back button-------------------------- -->
            <div class="" >
                <div class="d-flex justify-content-end back">
                    <a asp-action="Patient_submit_request" asp-controller="Home" class="btn btn-outline-info text-center p-2 btn-p">
                        <svg xmlns="http://www.w3.org/2000/svg"
                             width="16"
                             height="16"
                             fill="currentColor"
                             class="bi bi-chevron-left"
                             viewBox="0 0 16 16">
                            <path fill-rule="evenodd"
                                  d="M11.354 1.646a.5.5 0 0 1 0 .708L5.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0" />
                        </svg>
                        <span> back</span>
                    </a>
                </div>
                <!-- -----------------back button-------------------------- -->
            </div>

            <!-- -----------------form-------------------------- -->
            <div class="container-fluid ">
                <div class="container ps-3 shadow-lg ">
                    <h4 class="pt-3 mb-4">Family/Friend Information</h4>
                <form asp-action="Family_Friend_request" asp-controller="Request" method="post" enctype="multipart/form-data">

                    <div class="row">
                        <div class="col col-12 col-sm-6">
                            <div class="form-floating mb-3">
                                <input type="text"
                                           asp-for="FirstNameOther"
                                       class="form-control"
                                       id="floatingInput"
                                       placeholder="name@example.com" />
                                <label for="floatingInput">Your First Name</label>
                            </div>
                               
                        </div>
                        <div class="col col-12 col-sm-6 mb-3">
                            <div class="form-floating">
                                <input type="text"
                                           asp-for="LastNameOther"
                                       class="form-control"
                                       id="floatingPassword"
                                       placeholder="Password" />
                                <label for="floatingPassword">Your Last Name</label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col col-12 col-sm-6">
                            <div class="form-floating mb-3">
                                <input type="text"
                                           asp-for="PhoneNumberother"
                                       class="form-control"
                                       id="floatingInput"
                                       placeholder="name@example.com" />
                                <label for="floatingInput">Mobile No</label>
                            </div>
                        </div>
                        <div class="col col-12 col-sm-6 mb-3">
                            <div class="form-floating">
                                <input type="email"
                                           asp-for="EmailOther"
                                       class="form-control"
                                       id="floatingPassword"
                                       placeholder="Password" />
                                <label for="floatingPassword">Email</label>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col col-sm-6 col-12">
                            <div class="form-floating">
                                <input type="text"
                                       class="form-control"
                                           asp-for="Relation"
                                       id="floatingPassword"
                                       placeholder="Password" />
                                <label for="floatingPassword">Relation With Patient</label>
                            </div>
                        </div>
                    </div>

                    <h4 class="pt-3 mb-4">Patient Information</h4>

                    <div class="row">
                        <div class="col col-12 mb-3">
                            <div class="form-floating">
                                <textarea class="form-control"
                                          placeholder="Leave a comment here"
                                          id="floatingTextarea2"
                                          style="height: 100px"></textarea>
                                <label for="floatingTextarea2">Enter Brief Details Of Symptoms(optional)</label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col col-12 col-sm-6">
                            <div class="form-floating mb-3">
                                <input type="text"
                                    asp-for="FirstName_P"
                                       class="form-control"
                                       id="floatingInput"
                                       placeholder="name@example.com" />
                                <label for="floatingInput">First Name</label>
                                <span asp-validation-for="FirstName_P" class="text-danger mb-2"></span>
                            </div>
                        </div>
                        <div class="col col-12 col-sm-6 mb-3">
                            <div class="form-floating">
                                <input type="text"
                                    asp-for="LastName_P"
                                       class="form-control"
                                       id="floatingPassword"
                                       placeholder="Password" />
                                <label for="floatingPassword">Last Name</label>
                               <span asp-validation-for="LastName_P" class="text-danger mb-2"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col col-sm-6 col-12">
                            <div class="form-floating">
                                <input type="date"
                                    asp-for="BirthDate_P"
                                       class="form-control"
                                       id="floatingPassword"
                                           placeholder="Password" max="@DateTime.Now.ToString("yyyy-MM-dd")"
                                           min="@DateTime.Now.AddYears(-100).ToString("yyyy-MM-dd")" />
                                <label for="floatingPassword">Date Of Birth</label>
                                    <span asp-validation-for="BirthDate_P" class="text-danger mb-2"></span>
                            </div>
                        </div>
                    </div>

                    <h4 class="pt-3 mt-4 mb-4">Patient Contact Information</h4>

                    <div class="row">
                        <div class="col col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input type="email"
                                    asp-for="Email_P"
                                       class="form-control"
                                       id="floatingInput"
                                       placeholder="name@example.com" />
                                <label for="floatingInput">Email</label>
                                    <span asp-validation-for="Email_P" class="text-danger mb-2"></span>
                            </div>
                        </div>
                        <div class="col col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input type="tel"
                                           asp-for="PhoneNumber_P"
                                       class="form-control"
                                       id="floatingInput"
                                       placeholder="name@example.com" />
                                <label for="floatingInput">Mobile No</label>
                            </div>
                        </div>
                    </div>

                    <h4 class="pt-3 mt-4 mb-4">Patient Location</h4>

                    <div class="row">
                        <div class="col col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input type="text"
                                    asp-for="Street"
                                       class="form-control"
                                       id="floatingPassword"
                                       placeholder="Password" />
                                <label for="floatingPassword">Street</label>
                            </div>
                        </div>
                        <div class="col col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input type="text"
                                    asp-for="City"
                                       class="form-control"
                                       id="floatingPassword"
                                       placeholder="Password" />
                                <label for="floatingPassword">City</label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                    <select asp-for="State" class="form-select" aria-label="Default select example">
                                        <option selected>Open this select menu</option>
                                        @foreach (var item in Model.regions)
                                        {
                                            <option value="@item.RegionId">@item.Name</option>
                                        }
                                    </select>
                            </div>
                        </div>
                        <div class="col col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input type="text"
                                    asp-for="Zipcode"
                                       class="form-control"
                                       id="floatingPassword"
                                       placeholder="Password" />
                                <label for="floatingPassword">Zip Code</label>
                            </div>
                        </div>
                    </div>
                    <div class="row">

                        <div class="col col-sm-6 col-12">
                            <div class="form-floating">
                                <input type="text"
                                       class="form-control"
                                       id="floatingPassword"
                                       placeholder="Password" />
                                <label for="floatingPassword">Room #/suite(optional)</label>
                            </div>
                        </div>
                    </div>

                    <h4 class="pt-3 mt-4 mb-4">(optional) Upload Photo or Document</h4>

                        @* -------------------------------------------------------------- *@
                        <div class="input-group row p-2 mx-auto mt-3" style="height:60px">
                            <div class="d-flex">
                                <label for="fileUpload" class="col d-flex">
                                    <div class="col bg-white p-1 ps-3 text-muted border"><span id="infoArea">Select File</span></div>
                                    <div id="btn" class="p-1 btn btn-info">

                                        <i class="bi bi-cloud-arrow-up text-white"></i>
                                        <span style="color:white;" class="ps-1">Upload</span>

                                    </div>
                                    <input type="file" asp-for="Filedata" class="form-control-file" id="fileUpload" hidden>
                                </label>
                            </div>
                        </div>
                        @* -------------------------------------------------------------- *@

                    <div class="row mb-5 pb-3">
                        <div class="d-grid gap-2 d-flex justify-content-end mt-4">
                            <button class="btn btn-info me-md-2 text-white" type="submit">Submit</button>
                            <button class="btn btn-outline-info" type="button">Cancle</button>
            </form>
                        </div>
                    </div>
                </div>
            </div>

       
            <!-- -----------------form-------------------------- -->
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/Patient_request.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>

