@model DAL.ViewModel.Other_Request
@{
    ViewData["Title"] = "Concierge_Request";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Concierge Request</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HelloDoc.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/Concierge_Request.css" />
</head>
<body>
    <div class="container-fluid">
        <div class="row">
           
            <!-- -----------------back button-------------------------- -->
            <div>
                <div class="d-flex justify-content-end back">
                    <a asp-action ="Patient_submit_request" class="btn btn-outline-info text-center p-2 btn-p" asp-controller="Home">
                        <svg xmlns="http://www.w3.org/2000/svg"
                             width="16"
                             height="16"
                             fill="currentColor"
                             class="bi bi-chevron-left"
                             viewBox="0 0 16 16">
                            <path fill-rule="evenodd"
                                  d="M11.354 1.646a.5.5 0 0 1 0 .708L5.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0" />
                        </svg>
                        <span> back</span>
                    </a>
                </div>
                <!-- -----------------back button-------------------------- -->
            </div>

            <!-- -----------------form-------------------------- -->
            <div class="container-fluid ">
                <div class="container  ps-3 shadow-lg">
                    <h4 class="pt-3 mb-4">Concierge Information</h4>
            <form asp-controller="Request" asp-action="Concierge_Request" method="post">

                    <div class="row">
                        <div class="col col-12 col-sm-6">
                            <div class="form-floating mb-3">
                                <input type="text"
                                    asp-for="FirstNameOther"
                                       class="form-control"
                                       id="floatingInput"
                                       placeholder="name@example.com" />
                                <label for="floatingInput">Your First Name</label>
                            </div>
                        </div>
                        <div class="col col-12 col-sm-6 mb-3">
                            <div class="form-floating">
                                <input type="text"
                                    asp-for="LastNameOther"
                                       class="form-control"
                                       id="floatingPassword"
                                       placeholder="Password" />
                                <label for="floatingPassword">Your Last Name</label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col col-12 col-sm-6">
                            <div class="form-floating mb-3">
                                <input type="text"
                                    asp-for="PhoneNumberother"
                                       class="form-control"
                                       id="floatingInput"
                                       placeholder="name@example.com" />
                                <label for="floatingInput">Mobile No</label>
                            </div>
                        </div>
                        <div class="col col-12 col-sm-6 mb-3">
                            <div class="form-floating">
                                <input type="email"
                                    asp-for="EmailOther"
                                       class="form-control"
                                       id="floatingPassword"
                                       placeholder="Password" />
                                <label for="floatingPassword">Email</label>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col col-sm-6 col-12">
                            <div class="form-floating">
                                <input type="text"
                                    asp-for="HotelName"
                                       class="form-control"
                                       id="floatingPassword"
                                       placeholder="Password" />
                                <label for="floatingPassword">Hotel_Name</label>
                            </div>
                        </div>
                    </div>

                    <h4 class="pt-3 mt-4 mb-4">Concierge Location</h4>

                    <div class="row">
                        <div class="col col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input type="text"
                                    asp-for="Street"
                                       class="form-control"
                                       id="floatingPassword"
                                       placeholder="Password" />
                                <label for="floatingPassword">Street</label>
                            </div>
                        </div>
                        <div class="col col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input type="text"
                                    asp-for="City"
                                       class="form-control"
                                       id="floatingPassword"
                                       placeholder="Password" />
                                <label for="floatingPassword">City</label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input type="text"
                                    asp-for="State_c"
                                       class="form-control"
                                       id="floatingPassword"
                                       placeholder="Password" />
                                <label for="floatingPassword">State</label>
                            </div>
                        </div>
                        <div class="col col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input type="text"
                                    asp-for="Zipcode"
                                       class="form-control"
                                       id="floatingPassword"
                                       placeholder="Password" />
                                <label for="floatingPassword">Zip Code</label>
                            </div>
                        </div>
                    </div>


                    <h4 class="pt-3 mb-4">Patient Information</h4>

                    <div class="row">
                        <div class="col col-12 mb-3">
                            <div class="form-floating">
                                <textarea class="form-control"
                                          placeholder="Leave a comment here"
                                          id="floatingTextarea2"
                                          style="height: 100px"></textarea>
                                <label for="floatingTextarea2">Enter Brief Details Of Symptoms(optional)</label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col col-12 col-sm-6">
                            <div class="form-floating mb-3">
                                <input type="text"
                                    asp-for="FirstName_P"
                                       class="form-control"
                                       id="floatingInput"
                                       placeholder="name@example.com" />
                                <label for="floatingInput">First Name</label>
                                    <span asp-validation-for="FirstName_P" class="text-danger mb-2"></span>
                            </div>
                        </div>
                        <div class="col col-12 col-sm-6 mb-3">
                            <div class="form-floating">
                                <input type="text"
                                       class="form-control"
                                       asp-for="LastName_P"
                                       id="floatingPassword"
                                       placeholder="Password" />
                                <label for="floatingPassword">Last Name</label>
                                    <span asp-validation-for="LastName_P" class="text-danger mb-2"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col col-sm-6 col-12">
                            <div class="form-floating">
                                <input type="date"
                                       class="form-control"
                                       asp-for="BirthDate_P"
                                       id="floatingPassword"
                                           placeholder="Password" max="@DateTime.Now.ToString("yyyy-MM-dd")"
                                           min="@DateTime.Now.AddYears(-100).ToString("yyyy-MM-dd")" />
                                <label for="floatingPassword">Date Of Birth</label>
                            </div>
                        </div>
                    </div>

                    <h4 class="pt-3 mt-4 mb-4">Patient Contact Information</h4>

                    <div class="row">
                        <div class="col col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input type="email"
                                    asp-for="Email_P"
                                       class="form-control"
                                       id="floatingInput"
                                       placeholder="name@example.com" />
                                <label for="floatingInput">Email</label>
                                    <span asp-validation-for="Email_P" class="text-danger mb-2"></span>
                            </div>
                        </div>
                        <div class="col col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input type="tel"
                                       class="form-control"
                                       asp-for="PhoneNumber_P"
                                       id="floatingInput"
                                       placeholder="name@example.com" />
                                <label for="floatingInput">Mobile No</label>
                                    <span asp-validation-for="PhoneNumber_P" class="text-danger mb-2"></span>
                                </div>
                        </div>
                    </div>

                    <h4 class="pt-3 mt-4 mb-4">Patient Location</h4>

                    <div class="row">
                        <div class="col col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                    <select asp-for="State" class="form-select" aria-label="Default select example">
                                        <option value="0" selected>Open this select menu</option>
                                        @foreach (var item in Model.regions)
                                        {
                                            <option value="@item.RegionId">@item.Name</option>
                                        }
                                    </select>
                            </div>
                        </div>

                    </div>



                    <!-- ------------------------ -->
                    <div class="row mb-5 pb-3">
                        <div class="d-grid gap-2 d-flex justify-content-end mt-4">
                            <button class="btn btn-info me-md-2 text-white" type="submit">Submit</button>
                            <button class="btn btn-outline-info" type="button">Cancle</button>
                       </form>
                        </div>
                    </div>
                </div>
            </div>

        

            <!-- -----------------form-------------------------- -->
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/Patient_request.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
