@model DAL.ViewModels.Patient
@{
    ViewData["Title"] = "Patient_Request";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HelloDoc</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/HelloDoc.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Patient_Request.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <div class="container-fluid">
        <div class="row">

            <!-- -----------------back button-------------------------- -->
            <div class="bg-body-secondary">
                <div class="d-flex justify-content-end back">
                    <a asp-action="Patient_submit_request" class="btn btn-outline-info text-center p-2 btn-p">
                        <svg xmlns="http://www.w3.org/2000/svg"
                             width="16"
                             height="16"
                             fill="currentColor"
                             class="bi bi-chevron-left"
                             viewBox="0 0 16 16">
                            <path fill-rule="evenodd"
                                  d="M11.354 1.646a.5.5 0 0 1 0 .708L5.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0" />
                        </svg>
                        <span> back</span>
                    </a>
                </div>
                <!-- -----------------back button-------------------------- -->
            </div>

            <!-- -----------------form-------------------------- -->

            <div class="container-fluid bg-body-secondary">
                <div class="container white-bag ps-3 shadow-lg">
                    <h4 class="pt-3 mb-4">Patient Information</h4>

                    <form method="post" id="emailForm" enctype="multipart/form-data" asp-controller="ME_ForSomeOne" asp-action="Me">

                        <div class="row">
                            <div class="col col-12 mb-3">
                                <div class="form-floating">
                                    <textarea class="form-control"
                                              placeholder="Leave a comment here"
                                              id="floatingTextarea2"
                                              style="height: 100px"></textarea>
                                    <label for="floatingTextarea2">Enter Brief Details Of Symptoms(optional)</label>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col col-12 col-sm-6">
                                <div class="form-floating mb-3">
                                    <input type="text"
                                           asp-for="FirstName"
                                           class="form-control"
                                           id="floatingInput"
                                           placeholder="name@example.com" />
                                    <label for="floatingInput">First Name</label>
                                    <span asp-validation-for="FirstName" class="text-danger mb-2"></span>
                                </div>
                            </div>
                            <div class="col col-12 col-sm-6 mb-3">
                                <div class="form-floating">
                                    <input type="text"
                                           asp-for="LastName"
                                           class="form-control"
                                           id="floatingPassword"
                                           placeholder="Password" />
                                    <label for="floatingPassword">Last Name</label>
                                    <span asp-validation-for="LastName" class="text-danger mb-2"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col col-sm-6 col-12">
                                <div class="form-floating">
                                    <input type="date"
                                           asp-for="BirthDate"
                                           class="form-control"
                                           id="floatingPassword"
                                           placeholder="Password" />
                                    <label for="floatingPassword">Date Of Birth</label>
                                </div>
                            </div>
                        </div>

                        <h4 class="pt-3 mt-4 mb-4">Patient Contact Information</h4>

                        <div class="row">
                            <div class="col col-sm-6 col-12">
                                <div class="form-floating mb-3">
                                    <input type="email" id="email"
                                           asp-for="Email"
                                           class="form-control"
                                           id="floatingInput"
                                           placeholder="name@example.com" />
                                    <label for="floatingInput">Email</label>
                                    <span asp-validation-for="Email" class="text-danger mb-2"></span>
                                </div>
                            </div>
                            <div class="col col-sm-6 col-12">
                                <div class="form-floating mb-3">
                                    <input type="tel"
                                           asp-for="PhoneNumber"
                                           class="form-control"
                                           id="floatingInput"
                                           placeholder="name@example.com" />
                                    <label for="floatingInput">Mobile No</label>
                                </div>
                            </div>

                        </div>
                        <div class="row" id="passwordFields" style="display:none">
                            <div class="col col-sm-6 col-12">
                                <div class="form-floating mb-3">
                                    <input type="password" id="password"
                                           asp-for="PasswordHash"
                                           class="form-control"
                                           id="floatingInput"
                                           placeholder="name@example.com" />
                                    <label for="floatingInput">Password</label>
                                    <span asp-validation-for="PasswordHash" class="text-danger mb-2"></span>
                                </div>
                            </div>
                            <div class="col col-sm-6 col-12">
                                <div class="form-floating mb-3">
                                    <input type="password" id="confirmPassword"
                                           asp-for="Confirmpassword"
                                           class="form-control"
                                           id="floatingInput"
                                           placeholder="name@example.com" />
                                    <span asp-validation-for="Confirmpassword" class="text-danger mb-2"></span>
                                    <label for="floatingInput">Confirm Password</label>
                                </div>
                            </div>
                        </div>

                        <h4 class="pt-3 mt-4 mb-4">Patient Location</h4>

                        <div class="row">
                            <div class="col col-sm-6 col-12">
                                <div class="form-floating mb-3">
                                    <input type="text"
                                           asp-for="Street"
                                           class="form-control"
                                           id="floatingPassword"
                                           placeholder="Password" />
                                    <label for="floatingPassword">Street</label>
                                </div>
                            </div>
                            <div class="col col-sm-6 col-12">
                                <div class="form-floating mb-3">
                                    <input type="text"
                                           asp-for="City"
                                           class="form-control"
                                           id="floatingPassword"
                                           placeholder="Password" />
                                    <label for="floatingPassword">City</label>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col col-sm-6 col-12">
                                <div class="form-floating mb-3">
                                    <input type="text"
                                           asp-for="State"
                                           class="form-control"
                                           id="floatingPassword"
                                           placeholder="Password" />
                                    <label for="floatingPassword">State</label>
                                </div>
                            </div>
                            <div class="col col-sm-6 col-12">
                                <div class="form-floating mb-3">
                                    <input type="text"
                                           asp-for="ZipCode"
                                           class="form-control"
                                           id="floatingPassword"
                                           placeholder="Password" />
                                    <label for="floatingPassword">Zip Code</label>
                                </div>
                            </div>
                        </div>
                        <div class="row">

                            <div class="col col-sm-6 col-12">
                                <div class="form-floating">
                                    <input type="text"
                                           class="form-control"
                                           id="floatingPassword"
                                           placeholder="Password" />
                                    <label for="floatingPassword">Room #/suite(optional)</label>
                                </div>
                            </div>
                        </div>


                        <h4 class="pt-3 mt-4 mb-4">(optional) Upload Photo or Document</h4>

                        @* -------------------------------------------------------------- *@
                        <div class="input-group row p-2 mx-auto mt-3" style="height:60px">
                            <div class="d-flex">
                                <label for="fileUpload" class="col d-flex">
                                    <div class="col  p-1 ps-3 text-muted border"><span id="infoArea">Select File</span></div>
                                    <div id="btn" class="p-1 btn btn-info">

                                        <i class="bi bi-cloud-arrow-up text-white"></i>
                                        <span style="color:white;" class="ps-1">Upload</span>

                                    </div>
                                    <input type="file" asp-for="Filedata" class="form-control-file" id="fileUpload" hidden>
                                </label>
                            </div>
                        </div>
                        @* -------------------------------------------------------------- *@

                        <div class="row mb-3 pb-3 mb-5">
                            <div class="d-grid gap-2 d-flex justify-content-end mt-4">
                                <button class="btn btn-info me-md-2 text-white" type="submit" id="submitBtn">Submit</button>
                                <button class="btn btn-outline-info" type="button">Cancle</button>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/Patient_request.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
