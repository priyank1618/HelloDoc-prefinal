
@{
    ViewData["Title"] = "Patient_submit_request";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HelloDoc</title>

    <link rel="stylesheet" href="~/HelloDoc.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/Patient_Submit_request.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<div class="container-fluid">
    <div class="row">
       
        <!-- -----------------buttons--------------- -->
        <div class="col">
            <div class="text-center">
                <div>
                    <h2 class="mt-4 fs-1">I am a...</h2>
                    <a asp-action="index" class="btn btn-outline-info text-center p-2 btn-p">
                        <svg xmlns="http://www.w3.org/2000/svg"
                             width="16"
                             height="16"
                             fill="currentColor"
                             class="bi bi-chevron-left"
                             viewBox="0 0 16 16">
                            <path fill-rule="evenodd"
                                  d="M11.354 1.646a.5.5 0 0 1 0 .708L5.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0" />
                        </svg>
                        <span> back</span>
                    </a>
                </div>

                <div class="d-grid gap-4 shadow-none mx-auto mt-4">
                    <a asp-action="patient_Request" asp-controller="Request"
                       class="btn btn-1  text-start fs-4 pb-4 pt-1 btn-style"
                      >
                        PATIENT
                    </a>

                    <a asp-action="Family_Friend_Request" asp-controller="Request"
                       class="btn btn-2 text-start fs-4 pb-4 btn-style"
                       type="button">
                        FAMILY/FRIEND
                    </a>
                    <a asp-action="Concierge_Request" asp-controller="Request"
                       class="btn btn-3 text-start fs-4 pb-4 btn-style"
                       type="button">
                        CONCIERGE
                    </a>
                    <a asp-action="Business_Request" asp-controller="Request"
                       class="btn btn-4 text-start fs-4 pb-4 btn-style"
                       type="button">
                        BUSINESS PARTNER
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
