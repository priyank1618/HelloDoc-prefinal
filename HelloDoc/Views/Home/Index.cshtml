@{
    ViewData["Title"] = "Patient_site";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Patient_site</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Patient_site.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HelloDoc.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="back-img">
                <img src="../images/11116016_415.jpg" alt="" class="img-fluid" />
            </div>

            <div class="doct-logo">
                <img src="~/images/doct-logo-2.png" alt="" />
            </div>

            <div class="right">
                <div class="d-grid gap-4 btn-style">
                 <a asp-action="patient_submit_request">
                        <button class="btn btn-info my-auto text-center text-white fs-2 py-3 pt-1 btn-style"
                                type="button">
                            Submit A Request
                        </button>
                 </a>
                  <a asp-controller="Login" asp-action="Patient_login">
                        <button class="btn btn-primary text-center text-white fs-2 py-3 pt-1 btn-style opacity-5"
                                type="button">
                            Registered Patient
                        </button>
                  </a>
                </div>
            </div>

            <div class="text-muted text-center footer position-absolute w-100 bottom-0 mb-3">
                <span>Terms of condition |</span>
                <span>Privacy policy</span>
            </div>
        </div>

        <div class="dark-btn">
            <button class="btn dark-button border-3 border-info shadow-none mt-2 mr-2" id="theme-toggle">
                <svg xmlns="http://www.w3.org/2000/svg"
                     width="30"
                     height="35"
                     fill="currentColor"
                     class="bi bi-moon text-info p-1 m-auto type-bold"
                     viewBox="0 0 16 16">
                    <path d="M6 .278a.77.77 0 0 1 .08.858 7.2 7.2 0 0 0-.878 3.46c0 4.021 3.278 7.277 7.318 7.277q.792-.001 1.533-.16a.79.79 0 0 1 .81.316.73.73 0 0 1-.031.893A8.35 8.35 0 0 1 8.344 16C3.734 16 0 12.286 0 7.71 0 4.266 2.114 1.312 5.124.06A.75.75 0 0 1 6 .278M4.858 1.311A7.27 7.27 0 0 0 1.025 7.71c0 4.02 3.279 7.276 7.319 7.276a7.32 7.32 0 0 0 5.205-2.162q-.506.063-1.029.063c-4.61 0-8.343-3.714-8.343-8.29 0-1.167.242-2.278.681-3.286" />
                </svg>
            </button>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
</body>
</html>
