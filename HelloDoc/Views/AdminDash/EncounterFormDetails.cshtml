@model DAL.ViewModel.Encounter
@{
    Layout = null;
}
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Encounter Form Details</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        .encounterForm {
            background-color: #fff;
            border: 2px solid #3498db;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
            margin: 20px;
            padding: 20px;
            max-width: 800px;
            margin: auto;
        }

        h2 {
            color: #3498db;
            text-align: center;
            font-size: 28px;
            margin-bottom: 20px;
        }

        .details {
            padding: 10px;
        }

        .data {
            margin-bottom: 15px;
            border: 2px solid #ddd;
            padding: 15px;
            border-radius: 8px;
            background-color: #f9f9f9;
        }

            .data span {
                font-weight: bold;
                color: #555;
            }

        .followup {
            color: #e74c3c;
            font-weight: bold;
            font-size: 18px;
            margin-top: 15px;
        }
    </style>
</head>
<body>
    <div class="encounterForm h-100">
        <h2>Encounter Form Details</h2>
        <div class="details">
            <h5><div class="data"><span>First Name: </span> @Model.FirstName </div></h5>
            <h5><div class="data"><span>Last Name: </span> @Model.LastName </div></h5>
            <h5><div class="data"><span>Location: </span> @Model.Location </div></h5>
            <h5><div class="data"><span>Date of Birth: </span> @Model.BirthDate </div></h5>
            <h5><div class="data"><span>Date of Request: </span> @Model.ServiceDate </div></h5>
            <h5><div class="data"><span>Email: </span> @Model.Email </div></h5>
            <h5><div class="data"><span>History of Present Illness or Injury: </span> @Model.IllnessOrInjury </div></h5>
            <h5><div class="data"><span>Medical History: </span> @Model.MedicalHistory </div></h5>
            <h5><div class="data"><span>Medications: </span> @Model.Medications </div></h5>
            <h5><div class="data"><span>Allergies: </span> @Model.Allergies </div></h5>
            <h5><div class="data"><span>Temp: </span> @Model.Temprature </div></h5>
            <h5><div class="data"><span>HR: </span> @Model.HR </div></h5>
            <h5><div class="data"><span>RR: </span> @Model.RR </div></h5>
            <h5><div class="data"><span>Blood Pressure Diastolic: </span> @Model.SytolicBp </div></h5>
            <h5><div class="data"><span>Blood Pressure Systolic: </span> @Model.DistolicBp </div></h5>
            <h5><div class="data"><span>O2: </span> @Model.O2 </div></h5>
            <h5><div class="data"><span>Heent: </span> @Model.Heent </div></h5>
            <h5><div class="data"><span>Pain: </span> @Model.Pain </div></h5>
            <h5><div class="data"><span>CV: </span> @Model.Cv </div></h5>
            <h5><div class="data"><span>Chest: </span> @Model.Chest </div></h5>
            <h5><div class="data"><span>ABD: </span> @Model.ABD </div></h5>
            <h5><div class="data"><span>Extremities: </span> @Model.Extr </div></h5>
            <h5><div class="data"><span>Skin: </span> @Model.Skin </div></h5>
            <h5><div class="data"><span>Neuro: </span> @Model.Neuro </div></h5>
            <h5><div class="data"><span>Other: </span> @Model.Other </div></h5>
            <h5><div class="data"><span>Diagnosis: </span> @Model.Dignosis </div></h5>
            <h5><div class="data"><span>Treatment Plan: </span> @Model.TreatmentPlan </div></h5>
            <h5><div class="data"><span>Medical Dispensed: </span> @Model.MedicationDispensed </div></h5>
            <h5><div class="data"><span>Procedures: </span> @Model.Procedures </div></h5>
            <h5><div class="data followup"><span>FOLLOWUP: </span> @Model.Followup </div></h5>
        </div>
    </div>
</body>
</html>