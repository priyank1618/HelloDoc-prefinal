@model DAL.ViewModel.Encounter


@{
    ViewData["Title"] = "Encounter Form";
    string controller = null;
    if (ViewBag.IsPhysican)
    {
        Layout = "~/Views/Shared/_ProviderDashBoard.cshtml";
        controller = "ProviderDashBoard";
    }
    if (!ViewBag.IsPhysican)
    {
        Layout = "~/Views/Shared/_AdminDash.cshtml";
        controller = "AdminDash";
    }
}

<section class="bg-body-secondary border-2" style="margin-bottom:3rem">
    <div class="container bg-body-secondary mt-4">
        <div class="d-flex justify-content-between my-3">
            <div class="d-flex">
                <span class="fs-2  fw-bold">Encounter Form</span>
            </div>
            <div class="d-flex justify-content-end align-items-center">
                @if (!ViewBag.IsPhysican)
                {
                    <a asp-action="AdminDash" asp-controller="AdminDash"><button type="button" class="btn btn-primary btn  border border-info bg-transparent text-info shadow-none text-decoration-none ">Back</button></a>

                }
                else
                {
                    <a asp-action="ProviderDashBoard" asp-controller="ProviderDashBoard"><button type="button" class="btn btn-primary btn  border border-info bg-transparent text-info shadow-none text-decoration-none ">Back</button></a>
                }
            </div>
        </div>
        <div class="container white-bag p-3">
            <h2 class="text-center fw-bolder my-3 text-info">Medical Report - Confidential</h2>
            <form method="post" id="encounterForm" asp-controller="@controller" asp-action="EncounterForm" asp-route-id="@Model.requestid">
                <input class="d-none" value="0" />
                <div class="row gx-2">
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input type="text" asp-for="FirstName" class="form-control" id="first_name" placeholder="First Name">
                            <label for="floatingInput">First Name</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="last_name" placeholder="Last Name"
                            asp-for="LastName">
                            <label for="last_name">Last Name</label>
                        </div>
                    </div>
                </div>
                <div class="row gx-2">
                    <div class="col-md-12">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="location" placeholder="Location"
                            asp-for="Location" />
                            <label for="location">Location</label>
                        </div>
                    </div>
                </div>
                <div class="row gx-2">
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input type="date"
                                   class="form-control"
                                   id="floatingInput"
                                   asp-for="BirthDate"/>
                            <label for="floatingInput">Date of Birth</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input type="date" class="form-control" id="last_name" placeholder="Date"
                            asp-for="ServiceDate">
                            <label for="Date">Date</label>
                        </div>
                    </div>
                </div>
                <div class="row gx-2">
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control"
                             asp-for="IllnessOrInjury"  id="historyillness" placeholder="History Of Present Ilness Or Injury">
                            <label for="historyillness">History Of Present Ilness Or Injury</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="medicalhistory" placeholder="Medical History"
                            asp-for="MedicalHistory">
                            <label for="medicalhistory">Medical History</label>
                        </div>
                    </div>
                </div>
                <div class="row gx-2">
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="medications" placeholder="Medications"
                            asp-for="Medications">
                            <label for="medications">Medications</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="allergies" placeholder="Allergies"
                            asp-for="Allergies">
                            <label for="allergies">Allergies</label>
                        </div>
                    </div>
                </div>
                <div class="row gx-2">
                    <div class="col-md-4">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="temperature" placeholder="Temperature"
                            asp-for="Temprature">
                            <label for="temperature">Temperature</label>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="hr" placeholder="HR"
                            asp-for="HR">
                            <label for="hr">HR</label>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-floating mb-3">
                            <input type ="text" class="form-control" id="rr" placeholder="RR"
                            asp-for="RR">
                                <label for="rr">RR</label>
                        </div>
                    </div>
                </div>
                <div class="row gx-2">
                    <div class="col-md-2">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="bpsystolic" placeholder="Blood Presssure"
                            asp-for="SytolicBp">
                            <label for="bpsystolic">BP (Systolic)</label>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="bpdiastolic" placeholder="Blood Presssure"
                            asp-for="DistolicBp">
                            <label for="bpdiastolic">BP (Diastolic)</label>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="oxygen" placeholder="O2"
                            asp-for="O2">
                            <label for="oxygen">O2</label>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="pain" placeholder="Pain"
                            asp-for="Pain">
                            <label for="pain">Pain</label>
                        </div>
                    </div>
                </div>
                <div class="row gx-2">
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="heent" placeholder="HEENT"
                            asp-for="Heent">
                            <label for="heent">HEENT</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="cv" placeholder="CV"
                            asp-for="Cv">
                            <label for="cv">CV</label>
                        </div>
                    </div>
                </div>
                <div class="row gx-2">
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="chest" placeholder="Chest"
                            asp-for="Chest">
                            <label for="chest">Chest</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="abd" placeholder="ABD"
                            asp-for="ABD">
                            <label for="abd">ABD</label>
                        </div>
                    </div>
                </div>
                <div class="row gx-2">
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="extr" placeholder="Extr"
                            asp-for="Extr">
                            <label for="extr">Extr</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="skin" placeholder="Skin"
                            asp-for="Skin">
                            <label for="skin">Skin</label>
                        </div>
                    </div>
                </div>
                <div class="row gx-2">
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="neuro" placeholder="Neuro"
                            asp-for="Neuro">
                            <label for="neuro">Neuro</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="other" placeholder="Other"
                            asp-for="Other">
                            <label for="other">Other</label>
                        </div>
                    </div>
                </div>
                <div class="row gx-2">
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="diagnosis" placeholder="Diagnosis"
                            asp-for="Dignosis">
                            <label for="diagnosis">Diagnosis</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="treatmentplan" placeholder="Treatment Plan"
                            asp-for="TreatmentPlan">
                            <label for="treatmentplan">Treatment Plan</label>
                        </div>
                    </div>
                </div>
                <div class="row gx-2">
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="medicationsdispensed" placeholder="Medications Dispensed"
                            asp-for="MedicationDispensed">
                            <label for="medicationsdispensed">Medications Dispensed</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="procedures" placeholder="Procedures"
                            asp-for="Procedures">
                            <label for="procedures">Procedures</label>
                        </div>
                    </div>
                </div>
                <div class="row gx-2">
                    <div class="col-md-12">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="followup" placeholder="Followup"
                            asp-for="Followup">
                            <label for="followup">Followup</label>
                        </div>
                    </div>
                </div>
                <div class="d-flex flex-row-reverse mb-3">
                    <button class="p-2 btn btn-outline-info mx-1">Cancel</button>
                    @if (ViewBag.IsPhysican)
                    {
                        <a asp-action="Finalize" asp-controller="AdminDash" asp-route-id="@Model.requestid">
                            <button type="button" class="btn p-2 mx-1" style="background-color:indigo; color:white" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
                                Finalize
                            </button>
                        </a>
                    }
                   
                    <button class="btn btn-info mx-1" type="submit" id="savachanges">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</section>



