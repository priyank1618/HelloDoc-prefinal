@model DAL.ViewModel.CreateRequest

@{
    ViewData["Title"] = "CreateRequest";
    string controller = null;
    if (ViewBag.IsPhysican)
    {
        Layout = "~/Views/Shared/_ProviderDashBoard.cshtml";
        controller = "ProviderDashBoard";
    }
    if (!ViewBag.IsPhysican)
    {
        Layout = "~/Views/Shared/_AdminDash.cshtml";
        controller = "AdminDash";
    }
}

<div class="container-fluid bg-body-secondary " style="margin-bottom:3.5rem !important">
    <div class="mx-auto pt-3 mb-3 container-sm" id="secondDiv">
        <div class="backbtn d-flex justify-content-between px-3">
            <h4 class="text-body my-auto">Submit Information</h4>
            @if (!ViewBag.IsPhysican)
            {
                <a asp-action="AdminDash" asp-controller="AdminDash"><button type="button" class="btn btn-primary btn  border border-info bg-transparent text-info shadow-none text-decoration-none ">Back</button></a>

            }
            else
            {
                <a asp-action="ProviderDashBoard" asp-controller="ProviderDashBoard"><button type="button" class="btn btn-primary btn  border border-info bg-transparent text-info shadow-none text-decoration-none ">Back</button></a>
            }
        </div>

        <div id="FormOfPatientRequest" class="container-sm mt-3 p-3 gx-4 mb-3  bg-white shadow">
            <form class="form-floating" method="post" asp-controller="@controller" asp-action="CreateRequest">
                <!-- Patient Information -->
                <div class="row gx-4">
                    <h4 class="fw-semibold text-body">Patient</h4>

                    <div class="col-sm-12 col-md-12 col-lg-6 form-floating my-3">
                        <input type="text"
                               asp-for="FirstName"
                               class="form-control"
                               id="floatingInput1"
                               placeholder="First Name" />
                        <label for="floatingInput1" class="ms-2">First Name</label>
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="col-sm-12 col-md-12 col-lg-6 form-floating my-3">
                        <input type="text"
                               asp-for="LastName"
                               class="form-control"
                               id="floatingInput2"
                               placeholder="Last Name" />
                        <label for="floatingInput2" class="ms-2">Last Name</label>
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="col-sm-12 col-md-12 col-lg-6 form-floating my-3">
                        <input type="tel"
                               asp-for="PhoneNumber"
                               class="form-control"
                               id="floatingInpu5t"
                               placeholder="PhoneNumber" />
                        <label for="floatingInput5" class="ms-2">Mobile Number</label>
  
                    </div>
                    <div class="col-sm-12 col-md-12 col-lg-6 form-floating my-3">
                        <input type="text"
                               asp-for="Email"
                               class="form-control"
                               id="email1"
                               id="floatingInput4"
                               placeholder="name@inputtype.com"
                               onchange="CheckEmail()" />
                        <label for="floatingInput4" class="ms-2">Email</label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="col-sm-12 col-md-12 col-lg-6 form-floating my-3">
                        <input type="date"
                               asp-for="BirthDate"
                               max="@DateTime.Now.ToString("yyyy-MM-dd")"
                               min="@DateTime.Now.AddYears(-80).ToString("yyyy-MM-dd")"
                               class="form-control"
                               id="floatingInput3"
                               placeholder="Date Of Birth" />
                        <label for="floatingInput3" class="ms-2">Date Of Birth</label>
                     
                    </div>

                    <div class="row" id="passwordFields" style="display : none;">
                        <div class="col-sm-12 col-md-12 col-lg-6 form-floating my-3">
                            <input type="password"
                                   class="form-control"
                                   id="password"
                                   placeholder="Password" />
                            <label for="floatingInput" class="ms-2">Password</label>
                           
                        </div>

                        <div class="col-sm-12 col-md-12 col-lg-6 form-floating my-3">
                            <input type="tel"
                                   class="form-control"
                                   id="ConfirmPassword"
                                   placeholder="ConfirmPassword" />
                            <label for="floatingInput" class="ms-2">ConfirmPassword</label>
                        </div>

                    </div>

                    <!-- Patient Location-->

                    <h4 class="fw-semibold text-body mt-3">
                        Location
                    </h4>
                    <div class="col-sm-12 col-md-12 col-lg-6 form-floating my-3">
                        <input type="text"
                               asp-for="Street"
                               class="form-control"
                               id="floatingInput6"
                               placeholder="First Name" />
                        <label for="floatingInput6" class="ms-2">Street</label>
                    </div>
                    <div class="col-sm-12 col-md-12 col-lg-6 form-floating my-3">
                        <input type="text"
                               asp-for="City"
                               class="form-control"
                               id="floatingInput7"
                               placeholder="Last Name" />
                        <label for="floatingInput7" class="ms-2">City</label>
                    </div>
                    <div class="col-sm-12 col-md-12 col-lg-6 form-floating my-3">
                        <select class="form-control d-flex align-items-center py-2" asp-for="State" name="SelectedStateId">
                            <option>Select State</option>
                            @foreach (var state in Model.Region)
                            {
                                <option value="@state.RegionId">@state.Name</option>
                            }
                        </select>
                    </div>
                    <div class="col-sm-12 col-md-12 col-lg-6 form-floating my-3">
                        <input type="text"
                               asp-for="ZipCode"
                               class="form-control"
                               id="floatingInput8"
                               placeholder="Last Name" />
                        <label for="floatingInput" class="ms-2">Zip Code</label>
                    </div>
                    <div class="col-sm-12 col-md-12 col-lg-6 form-floating my-3">
                        <input type="text"
                               class="form-control"
                               id="floatingInput9"
                               placeholder="Last Name" />
                        <label for="floatingInput9" class="ms-2">Room # / Suite (Optional)</label>

                    </div>
                    <div class="col-sm-12 col-md-12 col-lg-6 form-floating my-3">
                        <button class=" btn btn-outline-info p-3 ">
                            <span class="fs-6">Verify</span>
                        </button>
                        <button class=" btn btn-outline-info p-3 ">
                            <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="currentColor" class="bi bi-geo-alt-fill" viewBox="0 0 16 16">
                                <path d="M8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10m0-7a3 3 0 1 1 0-6 3 3 0 0 1 0 6" />
                            </svg>
                            <span class="fs-6"> Map</span>
                        </button>
                    </div>

                    <!-- Notes -->

                    <h4 class="fw-semibold text-body mt-3">
                        Notes
                    </h4>
                    <div class="form-floating my-3 control-group col-12">
                        <textarea class="form-control"
                        asp-for="AdminNote"
                                  placeholder="Leave a comment here"
                                  id="floatingTextarea2"
                                  style="height: 120px"></textarea>
                        <label for="floatingTextarea2 control-label" class="ms-2 floating-label">Enter Brief Details of symptoms (Optional)</label>
                    </div>

                    <div class="d-flex justify-content-end my-3">
                        <button onclick="return validateInput()" type="submit" class="btn border-none bg-info p-3 text-light fw-semibold me-4" id="submitBtn">
                            submit
                        </button>
                        <button class="btn border-none bg-danger border-danger text-light p-3 fw-semibold">
                            cancel
                        </button>
                    </div>
                </div>
            </form>
           
        </div>
    </div>
</div>