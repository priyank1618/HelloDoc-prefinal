@model DAL.ViewModel.ShiftDetailModel

﻿@{
    ViewData["Title"] = "ReviewShift";
    Layout = "~/Views/Shared/_AdminDash.cshtml";
}

<div class="container-fluid  bg-body-secondary">
    <div class="container " style="height:80vh !important">
        <div class="justify-content-between d-flex  container-fluid mb-2 position-relative ">
            <div class="mt-3">
                <h3> Requested Shift</h3>
            </div>
            <div>
                <a asp-action="AdminDash" class="btn btn-outline-info mt-3"> ❮  Back </a>
            </div>
        </div>
        <div class="card border-0 shadow p-4 mb-5 rounded">
            <div class="d-flex justify-content-between ps-3">

                <div class="d-flex  border border-secondary rounded align-items-center mx-sm-2 ps-2 my-2 col-3">

                    <select class="form-select border-0 shadow-none" aria-label="Default select example" id="Regions" name="accounttypeuser">
                       <option selected value="0">All Regions</option>
                        
                        @foreach (var item in Model.Regions)
                        {
                            <option value="@item.RegionId">@item.Name</option>
                        }
                    </select>

                </div>


                <div>
                    <button class="btn btn-success mx-2 shadow-none" id="providerBtn" style="width:fit-content">
                        <span>View current Month Shift</span>
                    </button>
                    <button class="btn btn-success mx-2 shadow-none" id="approved" style="width:fit-content">
                        <span>Approved Selected </span>
                    </button>
                    <button class="btn btn-danger mx-2 shadow-none" id="Deleted" style="width:fit-content">
                        <span>Delete Selected</span>
                    </button>
                </div>

            </div>

            @* ---------------------------------- *@
            <div id="Partial"></div>
        </div>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>



        <script>
            FetchShift();
            $("#Regions").on("change", function () {
                console.log("iiii")
                FetchShift();
            });

            $document.ready(function () {
                $('#main').on('click', function () {
                    $('.other').prop("checked", $(this).prop("checked"));
                });
            });


            function FetchShift() {
                debugger
                var region = $("#Regions").val();
                $.ajax({
                    method: "GET",
                    url: "/AdminDash/GetShifts",
                    data: { region: region },
                    success: function (response) {
                        if (response.code == 401) {
 
                            location.reload();
                        }
                        else {
                        
                            $('#Partial').html(response)

                        }

                    },
                    error: function () {
                        alert("fail")
                    }
                })
            }
        </script>
