@model DAL.ViewModel.Patient_Profile

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout-1.cshtml";
}


<div class="row">
    <ul class="nav nav-underline" id="pills-tab" role="tablist">
        <li class="nav-item " role="presentation">
            <a asp-action="index" asp-controller="DashBoard" style="text-decoration:none!important "> <button class="nav-link text-info " id="pills-home-tab" data-bs-toggle="pill" data-bs-target="#pills-home" type="button" role="tab" aria-controls="pills-home" aria-selected="true">Home</button></a>
        </li>
        <li class="nav-item " role="presentation">
            <a asp-action="Patient_profile" asp-controller="DashBoard" style="text-decoration:none!important "> <button class="nav-link text-info" id="pills-profile-tab" data-bs-toggle="pill" data-bs-target="#pills-profile" type="button" role="tab" aria-controls="pills-profile" aria-selected="false">Profile</button></a>
        </li>

    </ul>
</div>

<div class="">
    <div class="mx-auto pt-4  pb-3" style="width:70%;">
        <div class="d-flex justify-content-between my-2">
            <h3>User Profile</h3><br />
            <a asp-action="index"><button type="button" class="btn btn-primary btn  border border-info bg-transparent text-info shadow-none text-decoration-none ">Back</button></a>
        </div>
        <div class=" shadow white-bag p-4">
            <h4 class="pt-3 mb-4">General Information</h4>

            <form  method="post" id="emailForm" enctype="multipart/form-data" asp-controller="DashBoard" asp-action="Patient_Profile">
                <div class="row">
                    <div class="col col-12 col-sm-6">
                        <div class="form-floating mb-3">
                            <input type="text"
                               
                                   asp-for="FirstName"
                                   class="form-control changable"
                                   id="floatingInput"
                                   placeholder="name@example.com"  disabled />
                            <label for="floatingInput">First Name</label>
                       
                        </div>
                    </div>
                    <div class="col col-12 col-sm-6 mb-3">
                        <div class="form-floating">
                            <input type="text"
                                   asp-for="LastName"
                                   class="form-control changable"
                                   id="floatingPassword"
                                   placeholder="Password"  disabled />
                            <label for="floatingPassword">Last Name</label>
                       
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col col-sm-6 col-12">
                        <div class="form-floating">
                            <input type="date"
                                   asp-for="BirthDate"
                                   class="form-control changable"
                                   id="floatingPassword"
                                   placeholder="Password"  disabled />
                            <label for="floatingPassword">Date Of Birth</label>
                        </div>
                    </div>
                </div>

                <h4 class="pt-3 mt-4 mb-4"> Contact Information</h4>

                <div class="row">
                    <div class="col col-sm-2 col-12">
                        <div class="form-floating mb-3">
                            <input type="email" id="email"
                                   class="form-control changable"
                                   id="floatingInput"
                                   placeholder="name@example.com"  disabled />
                            <label for="floatingInput">Type</label>
                          
                        </div>
                    </div>
                    <div class="col col-sm-4 col-12">
                        <div class="form-floating mb-3">
                            <input type="tel"
                                     asp-for="PhoneNumber"
                                   class="form-control changable"
                                   id="floatingInput"
                                   placeholder="name@example.com" disabled />
                            <label for="floatingInput">Mobile No</label>
                        </div>
                    </div> <div class="col col-sm-6 col-12">
                        <div class="form-floating mb-3">
                            <input type="tel"
                                  asp-for=Email
                                   class="form-control"
                                   id="floatingInput"  
                                   placeholder="name@example.com" disabled />
                            <label for="floatingInput">Email </label>
                        </div>
                    </div>

                </div>
              
                  
                <h4 class="pt-3 mt-4 mb-4">Patient Location</h4>

                <div class="row">
                    <div class="col col-sm-6 col-12">
                        <div class="form-floating mb-3">
                            <input type="text"
                                   asp-for="Street"
                                   class="form-control changable"
                                   id="floatingPassword"
                                   placeholder="Password"  disabled />
                            <label for="floatingPassword">Street</label>
                        </div>
                    </div>
                    <div class="col col-sm-6 col-12">
                        <div class="form-floating mb-3">
                            <input type="text"
                                   asp-for="City"
                                   class="form-control changable"
                                   id="floatingPassword"
                                   placeholder="Password"  disabled />
                            <label for="floatingPassword">City</label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col col-sm-6 col-12">
                        <div class="form-floating mb-3">
                            <input type="text"
                                    asp-for="State"
                                   class="form-control changable"
                                   id="floatingPassword"
                                   placeholder="Password"  disabled />
                            <label for="floatingPassword">State</label>
                        </div>
                    </div>
                    <div class="col col-sm-4 col-12">
                        <div class="form-floating mb-3">
                            <input type="text"
                                   asp-for="ZipCode"
                                   class="form-control changable"
                                   id="floatingPassword"
                                   placeholder="Password"  disabled />
                            <label for="floatingPassword">Zip Code</label>
                        </div>
                    </div> 
  
                        <div class="col col-sm-2 col-12">
                            <button class=" btn btn-outline-info" style="height:55px">
                                <svg xmlns="http://www.w3.org/2000/svg" width="26" height="26" fill="currentColor" class="bi bi-geo-alt" viewBox="0 0 16 16">
                                    <path d="M8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10m0-7a3 3 0 1 1 0-6 3 3 0 0 1 0 6" />
                                </svg>
                                <span>Map</span>
                            </button>
                        </div>

                    <div class="d-flex justify-content-end my-1">
                        <button onclick="toggleEdit()"  type="button" class="btn border-none bg-info p-2 text-light fw-semibold me-4" id="EditBtn">
                            Edit
                        </button> 
                        <button onclick="toggleSave()"  type="submit" class="btn border-none bg-info p-2 text-light fw-semibold me-4" id="SaveBtn">
                            Save
                        </button>
                        <button onclick="toggleCancel()" type="button" class="btn border-none bg-danger p-2 text-light fw-semibold me-4" id="CancelBtn">
                            Cancle
                        </button>
                    </div>
                </div>
               
            </form>
        </div>
    </div>

         </div>


@section scripts {
    <!-- jQuery script -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/jquery.min.js"></script>

    <script>

        $("#CancelBtn").hide();
        $("#SaveBtn").hide();
        function toggleEdit() {

            var inputFields = document.querySelectorAll('.changable');


            inputFields.forEach(function (input) {
                input.disabled = !input.disabled;
            });

            $("#CancelBtn").show();
            $("#EditBtn").hide();
            $("#SaveBtn").show();
        }


        function toggleCancel() {
            var inputFields = document.querySelectorAll('.changable');

            // Toggle the disabled attribute for each input field
            inputFields.forEach(function (input) {
                input.disabled = !input.disabled;
            });

            $("#EditBtn").show();
            $("#CancelBtn").hide();
            $("#SaveBtn").hide();
        }

    </script>
}

        